<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" strict="true" name="youapp-log4j2" packages="com.fykj">
	<Properties>
		<Property name="rolllogDir">c:/fykj-project/log</Property>
		<Property name="rolllogRollingFile">fykj-web.log</Property>
	</Properties>

	<Appenders>
		<Appender type="Console" name="appConsole">
			<Layout type="PatternLayout" pattern="%d %p  %c [%t] %m %n" />
		</Appender>

		<RollingFile name="rollingFile" fileName="${rolllogDir}/${rolllogRollingFile}" append="true" immediateFlush="false"
			filePattern="${rolllogDir}/$${date:yyyy-MM}/fykj-web-%d{MM-dd-yyyy}-%i.log">
			<PatternLayout pattern="%d{yyyy-MM-dd 'at' HH:mm:ss z} %-5level %class{36} %L %M - %msg%xEx%n" />
			<SizeBasedTriggeringPolicy size="5 MB" />
			<DefaultRolloverStrategy max="10000" />
		</RollingFile>
	</Appenders>

	<Loggers>
		<Logger name="com.fykj" additivity="false">
			<AppenderRef ref="appConsole" />
			<AppenderRef ref="rollingFile" />
		</Logger>

		<Logger name="com.kcfy" additivity="false" level="debug">
			<AppenderRef ref="appConsole" />
			<AppenderRef ref="rollingFile" />
		</Logger>

		<Logger name="org" level="error" additivity="false">
			<AppenderRef ref="appConsole" />
			<AppenderRef ref="rollingFile" />
		</Logger>

		<Logger name="test.com.fykj" additivity="false">
			<AppenderRef ref="appConsole" />
			<!-- <AppenderRef ref="rollingFile" /> -->
		</Logger>

		<root level="debug">
			<AppenderRef ref="appConsole" />
			<AppenderRef ref="rollingFile" />
		</root>

	</Loggers>
</Configuration>